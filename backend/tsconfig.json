{
  "compilerOptions": {
    "module": "ESNext",  
    "moduleResolution": "Node", 
    "target": "ESNext", 
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "*": ["node_modules/*"]  
    },
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "ts-node": {
    "esm": true
  }
}